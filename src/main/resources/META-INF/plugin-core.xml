<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
  <resource-bundle>messages.TSRunConfigurationBundle</resource-bundle>

  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.platform</depends>
  <depends>JavaScript</depends>
  <depends>JavaScriptDebugger</depends>
  <depends>NodeJS</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <configurationType implementation="com.github.bluelovers.idea_ts_run_configuration.typescript.runconfig.TSRunConfigurationType"/>
    <runConfigurationProducer implementation="com.github.bluelovers.idea_ts_run_configuration.typescript.runconfig.TSRunConfigurationProducer"/>
    <projectConfigurable id="settings.typescript.runconfig.execute"
                         parentId="settings.typescriptcompiler"
                         instance="com.github.bluelovers.idea_ts_run_configuration.typescript.settings.TSRunConfigurationConfigurable"
                         key="settings.typescript.execute.configurable.name"
                         bundle="messages.TSRunConfigurationBundle"
                         order="last"/>
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>
